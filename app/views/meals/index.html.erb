<h1><%= "#{t('meal')}#{t('listing')}" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('label.date') %></th>
      <th><%= t('type') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.date %></td>
        <td><%= t("#{meal.meal_type}") %></td>
        <td><%= link_to t(t('show')), meal %></td>
        <td><%= link_to t('up'), "/meals/#{meal.id}/up", :method => :post, data: { confirm: 'Are you sure?' }  %></td>
        <td><%= link_to t('down'), "/meals/#{meal.id}/down", :method => :post, data: { confirm: 'Are you sure?' }  %></td>
        <td><%= link_to t('edit'), edit_meal_path(meal) %></td>
        <td><%= link_to t(t('destroy')), meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new') + t('meal'), new_meal_path %>
