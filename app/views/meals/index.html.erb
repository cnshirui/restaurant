<h1>Listing meals</h1>

<table>
  <thead>
    <tr>
      <th><%= t('label.date') %></th>
      <th><%= t('label.type') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.date %></td>
        <td><%= t("label.#{meal.meal_type}") %></td>
        <td><%= link_to t('label.show'), meal %></td>
        <td><%= link_to t('label.up'), "/meals/#{meal.id}/up", :method => :post, data: { confirm: 'Are you sure?' }  %></td>
        <td><%= link_to t('label.down'), "/meals/#{meal.id}/down", :method => :post, data: { confirm: 'Are you sure?' }  %></td>
        <td><%= link_to t('label.edit'), edit_meal_path(meal) %></td>
        <td><%= link_to t('label.destroy'), meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Meal', new_meal_path %>
