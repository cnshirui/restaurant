<h1><%= "#{t('dish')}#{t('listing')}" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th><%= t('book') %></th>
      <th><%= t('page') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.name %></td>
        <td><%= link_to dish.book.name, book_path(dish.book) %></td>
        <td><%= auto_link dish.page, :html => { :target => '_blank' } %></td>
        <td><%= link_to t('show'), dish %></td>
        <td><%= link_to t('edit'), edit_dish_path(dish) %></td>
        <td><%= link_to t('destroy'), dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{t('new')}#{t('dish')}", new_dish_path %>
