<h1><%= "#{t('material')}#{t('listing')}" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('category') %></th>
      <th><%= t('name') %></th>
      <th><%= t('balance') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= t(material.category) if material.category %></td>
        <td><%= material.name %></td>
        <td><%= material.balance %> g</td>
        <td><%= link_to t(t('show')), material %></td>
        <td><%= link_to t('edit'), edit_material_path(material) %></td>
        <td><%= link_to t(t('destroy')), material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('new') + ' ' + t('material'), new_material_path %>
