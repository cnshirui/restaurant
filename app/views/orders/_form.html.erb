      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :meal_id %><br>
    <%= f.select :meal_id, Meal.order(:position).map { |m| [ "#{m.date} - " + t( m.meal_type), m.id] } %>
  </div>

  <div class="field">
    <%= f.label :dish_id %><br>
    <%= f.select :dish_id, Dish.all.map { |d| [d.name, d.id] } %>
