<h1><%= "#{t('order')}#{t('listing')}" %></h1>

<%= link_to "#{t('new')}#{t('order')}", new_order_path %>
<br/><br/>

<table width="50%" border="1" cellpadding="0" bordercolorlight="#999999" bordercolordark="#FFFFFF" cellspacing="0" align="left">
  <thead>
    <tr>
      <th><%= t('meal') %></th>      
      <th><%= t('breakfast') %></th>
      <th><%= t('lunch') %></th>
      <th><%= t('dinner') %></th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |date, meals| %>
      <tr>
        <td><%= date %></td>    
        <% ['breakfast', 'lunch', 'dinner'].each do |type| %>
          <td>
            <% next unless meals.has_key?(type) %>
            <% meals[type].each do |dish| %>
              <%= link_to dish.name, dish %><br/>
            <% end %>           
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
