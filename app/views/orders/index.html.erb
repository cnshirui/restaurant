<h1><%= "#{t('order')}#{t('listing')}" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('meal') %></th>      
      <th><%= t('dish') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to "#{order.meal.date} - " + t( order.meal.meal_type), meal_path(order.meal) %></td>        
        <td><%= link_to order.dish.name, dish_path(order.dish) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{t('new')}#{t('order')}", new_order_path %>
