<h1><%= "#{t('book')}#{t('listing')}" %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('name') %></th>
      <th><%= t('url') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= auto_link book.url, :html => { :target => '_blank' }  %></td>
        <td><%= link_to t('show'), book %></td>
        <td><%= link_to t('edit'), edit_book_path(book) %></td>
        <td><%= link_to t('destroy'), book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{t('new')}#{t('book')}", new_book_path %>
